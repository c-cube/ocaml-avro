
(rule
  (alias runtest)
  (deps llist.json)
  (action (run ./bin/parse_print_parse.exe %{deps})))


(rule
  (alias runtest)
  (deps cards.json)
  (action (run ./bin/parse_print_parse.exe %{deps})))


(rule
  (alias runtest)
  (deps avro_file_header.json)
  (action (run ./bin/parse_print_parse.exe %{deps})))


(rule
  (alias runtest)
  (deps records.json)
  (action (run ./bin/parse_print_parse.exe %{deps})))

(rule
  (targets records.ml)
  (deps records.json)
  (action (run ../src/compiler/main.exe %{deps} -o %{targets})))

(executable
  (name records_test)
  (modules records_test records)
  (libraries avro))

(rule
  (targets records_hash)
  (locks /thash)
  (action
    (progn
      (setenv
        "N" "100_000"
        (setenv
          "OUT" "tmp.data"
          (run ./records_test.exe)))
      (with-stdout-to %{targets}
                      (run sha256sum "tmp.data")))))

(rule
  (alias runtest)
  (deps records_hash)
  (action (diff records_hash.expected records_hash)))


(rule
  (targets records_hash_deflate)
  (locks /thash)
  (action
    (progn
      (setenv
        "CODEC" "deflate"
        (setenv
          "N" "100_000"
          (setenv
            "OUT" "tmp.data"
            (run ./records_test.exe))))
      (with-stdout-to %{targets}
                      (run sha256sum "tmp.data")))))


(rule
  (alias runtest)
  (deps records_hash)
  (action (diff records_hash_deflate.expected records_hash_deflate)))

(env
  (_ (flags :standard -warn-error -a)))
